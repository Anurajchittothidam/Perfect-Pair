<%-include('../layout/adminLayout')%>
<%-include('../partials/admin-sidebar')%>
<section class="content">
    <div class="body_scroll">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>Product List</h2>
                   
                    <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
                </div>
            </div>
        </div>
        <div class="card">
          <div class="header text-center">
              <h2><strong>Product</strong> Mangement</h2>
             
            </div>
          </div>
        <div class="container-fluid">
            <div class="row clearfix">
              <div>
                <a
                  href="/admin/add-product"
                  type="button"
                  class="btn btn-primary btn-lg btn-block my-3 ml-3"
                  >Add Product</a
                >
              </div>
                <div class="col-lg-12">
                    <div class="card">
                        <% if (message){%>
                            <div class="alert alert-warning"  role="alert"><%= message %>
                            </div>
                        <%}%>
                        <div class="table-responsive">
                            <table class="table table-hover product_item_list c_table theme-color mb-0">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Product Name</th>
                                        <th data-breakpoints="sm xs">Price</th>
                                        <th data-breakpoints="sm xs">Description</th>
                                        <th data-breakpoints="xs">Stock</th>
                                        <th data-breakpoints="xs">Brand</th>
                                        <th data-breakpoints="xs md">Category</th>
                                        <th data-breakpoints="sm xs md">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%product.forEach(product=>{%>
                                    <tr>
                                        <td>
                                            <% for (let i=0;i< 3; i++) { %>
                                            <a data-toggle="modal"><img style="height: 2em; width: 2.5em" src="/<%= product?.image[i]?.path %>" /></a>
                                            <% } %>
                                          </td>
                                        <td class="text-wrap" style="width:10rem;"><h5><%=product.name%></h5></td>
                                        <td><span class="text-muted"><%=product.price%></span></td>
                                        <td class="text-wrap" style="width: 20rem;"><%=product.description%></td>
                                        <td><%=product.stock%></td>
                                        <td><%=product.brand%></td>
                                        <td><%=product?.category?.category_name%></td>
                                        <td class=" text-center">
                                            <a type="button" href="/admin/editPage/<%=product._id%>"  class="btn btn-success waves-effect waves-float btn-sm waves-green" style="width: 5em;"><i class="zmdi zmdi-edit"></i></a>
                                            <%if(product.delete===false){%>
                                              <form action="/admin/deleteProduct/<%=product._id%>" method="post">  
                                              <button  type="submit" class="btn btn-default waves-effect waves-float btn-sm btn-danger">Delete</button>
                                            </form>
                                            <%}else{%>
                                              <form action="/admin/restoreProduct/<%=product._id%>" method="post">
                                                <button  type="submit" class="btn btn-default waves-effect waves-float btn-sm btn-success">Restore</button>
                                              </form>
                                            <%}%>
                                        </td>
                                    </tr>
                                    <%})%> 
                                </tbody>
                            </table>
                        </div>
                    </div>
